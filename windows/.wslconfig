[wsl2]
# Рекомендую выделить 6-8ГБ для WSL, чтобы 8-10ГБ осталось для Windows и Ollama
memory=8GB

# Ограничение ядер процессора (обычно половина от общего числа ядер ноутбука)
processors=4

# Режим зеркалирования сети (позволяет подключаться к Ollama через localhost)
networkingMode=mirrored

[experimental]
# Автоматическое освобождение памяти Windows, которую WSL больше не использует
autoMemoryReclaim=gradual

# Автоматическое сжатие виртуального диска (экономит место на SSD)
sparseVhd=true
